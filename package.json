{
  "name": "brindisi",
  "version": "1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "Guía de preparación de cocteles",
  "author": "Beraka Studio",
  "homepage": ".",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env IS_DEV=true electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.0",
    "vite-plugin-pwa": "^0.19.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.brindisi.app",
    "productName": "Brindisi",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/icons/**/*",
      "!node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/icons",
        "to": "icons",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false,
      "icon": "public/icons/icon-brindisi-color.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Brindisi",
      "installerIcon": "public/icons/icon-brindisi-color.ico",
      "uninstallerIcon": "public/icons/icon-brindisi-bn.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icons/icon-brindisi-color.png",
      "category": "public.app-category.lifestyle",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "${productName} ${version}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "public/icons/icon-brindisi-color.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}.${ext}",
      "maintainer": "Brindisi Team"
    }
  }
}